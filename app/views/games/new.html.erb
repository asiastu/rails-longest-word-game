<div class="container">
  <h1>New Game</h1>
  <div class="boxes">
    <% @letters.each do |letter| %>
      <div class="box"><%=letter%></div>
    <% end %>
  </div>
  <form action="/score" method="post">
    <div class="form-group">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :start_time, Time.now %>
      <label for="word-entry">What is the longest word you can find?</label>
      <div class="input">
        <input type="text" class="form-control" id="word-entry" name="word" placeholder="Word">
        <input type="submit" class="btn-info">
      </div>
    </div>
  </form>
</div>


